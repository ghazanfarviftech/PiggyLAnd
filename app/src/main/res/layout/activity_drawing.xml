<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
   >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="#000000"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp"
        android:id="@+id/linearLayout2">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/back"
            android:src="@drawable/left_arrow"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/undo"
            android:src="@drawable/undo_button"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/shapes"
            android:src="@drawable/geometric"/>
          <ImageView
              android:layout_width="@dimen/_20sdp"
              android:layout_height="@dimen/_20sdp"
              android:layout_weight="1"
              android:id="@+id/camera_pick"
              android:src="@drawable/photo_camera"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="3"
            android:paddingLeft="@dimen/_45sdp"
            android:id="@+id/save"
            android:src="@drawable/uploading_archive"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        android:background="#000000"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/draw"
            android:src="@drawable/pencil"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/colorPicker"
            style="@style/ColorPicker"
            android:src="@drawable/paint_brush"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/rubber"
            android:src="@drawable/rubber"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/text_write"
            android:src="@drawable/text"/>
        <!--   <ImageView
               android:layout_width="@dimen/_20sdp"
               android:layout_height="@dimen/_20sdp"
               android:layout_weight="1"
               android:src="@drawable/paint_brush"/>-->

    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_frame"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/linearLayout2">
        <com.example.ghazanfarali.piggyland.CanvasView
            android:id="@+id/canvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/linearLayout"
            android:layout_below="@+id/linearLayout2" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/linearLayout"
            android:id="@+id/frame_main"
            android:layout_below="@+id/linearLayout2">

        </FrameLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_above="@+id/linearLayout"
        android:background="@color/colorblack"
        android:id="@+id/like_bottomsheet">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Brush"
            android:id="@+id/brush"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pen"
            android:id="@+id/pen"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Caryon"
            android:id="@+id/crayon"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paint"
            android:id="@+id/paint"/>
    </LinearLayout>


</RelativeLayout>
    <include layout="@layout/content_bottom_sheet" />

</android.support.design.widget.CoordinatorLayout>
