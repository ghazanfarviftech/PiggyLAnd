              android:layout_width="@dimen/_20sdp"
              android:layout_height="@dimen/_20sdp"
              android:layout_weight="1"
              android:id="@+id/camera_pick"
              android:src="@drawable/photo_camera"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="3"
            android:paddingLeft="@dimen/_45sdp"
            android:id="@+id/save"
            android:src="@drawable/uploading_archive"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        android:background="#000000"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/draw"
            android:src="@drawable/pencil"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/colorPicker"
            android:src="@drawable/paint_brush"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/rubber"
            android:src="@drawable/rubber"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_weight="1"
            android:id="@+id/text_write"
            android:src="@drawable/text"/>
        <!--   <ImageView
               android:layout_width="@dimen/_20sdp"
               android:layout_height="@dimen/_20sdp"
               android:layout_weight="1"
               android:src="@drawable/paint_brush"/>-->

    </LinearLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_frame"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/linearLayout"
        android:layout_below="@+id/linearLayout2">
        <com.example.ghazanfarali.piggyland.CanvasView
            android:id="@+id/canvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/linearLayout"
            android:layout_below="@+id/linearLayout2" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_above="@+id/linearLayout"
            android:id="@+id/frame_main"
            android:layout_below="@+id/linearLayout2">

        </FrameLayout>

    </FrameLayout>


