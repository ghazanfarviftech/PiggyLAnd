<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">#D093A2</item>
        <item name="colorControlHighlight">#D093A2</item>

    </style>

    <style name="CustomActivityTheme" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_1</item>
        <item name="homeAsUpIndicator">@drawable/ic_menu_1</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">@dimen/x60</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorwhite</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorwhite</item>
        <item name="colorControlNormal">@color/colorwhite</item>
        <item name="colorControlActivated">@color/colorwhite</item>
    </style>
</resources>
